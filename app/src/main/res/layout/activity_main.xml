<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/projectsList"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_Project1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/projectOne"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView_Project2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/projectTwo"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView_Project3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/projectThree"
            android:textSize="24sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/addNewProjectName"
        android:layout_width="252dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/addNewProjectName"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="204dp" />

    <Button
        android:id="@+id/button_Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/button_Add"
        app:layout_constraintStart_toEndOf="@+id/addNewProjectName"
        tools:layout_editor_absoluteY="203dp" />
</androidx.constraintlayout.widget.ConstraintLayout>